<div class="row">
  <div class="col s6 offset-s3">
    <% if @messages %>
      <div>
      <strong> Invalid Login </strong>
      <ul>
        <% @messages.each do |message| %>
        <li> <%= message %> </li>
      </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s6 offset-s3">
    <h1 class="title">Welcome back</h1>
  </div>
</div>
  <form action="/login" method="POST">
    <div class="row">
      <div class="input-field col s6 offset-s3">
        <label for="email">Email:</label>
        <input type="email" class="validate" id="email" name="email"> <br>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6 offset-s3">
        <label for="password_hash">Password:</label>
        <input type="password" class="validate" id="password" name="password_hash">
      </div>
    </div>
    <div class="row">
      <div class="col s6 offset-s3 center">
        <button class="btn waves-effect waves-light" type="submit" name="action">Login
          <i class="material-icons">send</i>
        </button>
      </div>
    </div>
 </form>

<div class="row">
  <div class="col s6 offset-s3 center">
    <span>Don't have an account?<a href="/signup_customer"> Sign Up</a></span>
  </div>
</div>
