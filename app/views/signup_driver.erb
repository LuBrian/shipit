<div class="row">
	<div class="input-field col s6 offset-s3">
		<ul class="error"> 
		  <% if @current_user && @current_user.errors.any? %> 
		    <% @current_user.errors.full_messages.each do |message| %>
		      <li> <%= message %> </li>
		      <% end %> 
		  <% end %> 
		</ul>
	</div>
</div>


<div class="row">
	<div class="input-field col s6 offset-s3">
		<h1>Start Delivering Now</h1>
	</div>
</div>

<div class="row">
	<div class="input-field col s6 offset-s3">
		<h2>Account</h2>
	</div>
</div>

<form action="/signup_driver" method="POST">
	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="email">Email:</label>
			<input type="text" id="email" class="validate" name="email" value="<%= current_user.email if current_user && current_user.type == 'Driver' %>"><br>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="password_hash">Password:</label>
			<input type="password" id="password_hash" class="validate" name="password_hash" value="<%= current_user.password_hash if current_user && current_user.type == 'Driver' %>">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<h2>Profile</h2>
		</div>
	</div>

  	<div class="row">
  		<div class="input-field col s6 offset-s3">
				<label for="first_name">First Name:</label>
				<input type="text" id="" class="validate" name="first_name" value="<%= current_user.first_name if current_user && current_user.type == 'Driver' %>"><br>
			</div>
		</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="last_name">Last Name:</label>
			<input type="text" id="first_name" class="validate" name="last_name" value="<%= current_user.last_name if current_user && current_user.type == 'Driver' %>">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="phone_number">Phone Number:</label>
			<input type="text" id="last_name" class="validate" name="phone_number" value="<%= current_user.phone_number if current_user && current_user.type == 'Driver' %>">
		</div>
	</div>

<div class="row">
	<div class="input-field col s6 offset-s3">
	  <h2>License</h2>
	</div>
</div>

  <div class="row">
  	<div class="input-field col s6 offset-s3">
	    <label for="license">License ID:</label>
	    <input type="text" id="" class="validate" name="license" value="<%= current_user.license if current_user && current_user.type == 'Driver' %>"><br>
		</div>
  </div>

  <div class="row">
	  <div class="input-field col s6 offset-s3">
	    <label for="license_expiry">Expiry:</label>
	    <input type="text" id="" name="license_expiry" class="validate" value="<%= current_user.license_expiry if current_user && current_user.type == 'Driver' %>">
		</div>
	</div>

  <div class="row">
	  <div class="input-field col s6 offset-s3">
	    <label for="province">Province:</label>
	    <input type="text" id="" name="province" class="validate" value="<%= current_user.province if current_user && current_user.type == 'Driver' %>">
	  </div>
	</div>

	<div class="row">
		<div class="col s6 offset-s3">
			<button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
		</div>
	</div>
</form>

<div class="row">
	<div class="col s6 offset-s3">
		<span>Need to ship?<a href="/signup_customer"> Become a customer</a></span>
	</div>
</div>

