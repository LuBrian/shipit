<div class="row">
	<div class="input-field col s6 offset-s3">
		<h1>Start Delivering Now</h1>
	</div>
</div>

<div class="row">
	<div class="input-field col s6 offset-s3">
		<h2>Account</h2>
	</div>
</div>

<form action="/signup_driver" method="POST">
	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="email">Email:</label>
			<input type="text" id="email" name="email"><br>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="password_hash">Password:</label>
			<input type="password" id="password" name="password">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<h2>Profile</h2>
		</div>
	</div>

  	<div class="row">
  		<div class="input-field col s6 offset-s3">
				<label for="first_name">First Name:</label>
				<input type="text" id="" name="first_name"><br>
			</div>
		</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="last_name">Last Name:</label>
			<input type="text" id="first_name" name="last_name">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="phone_number">Phone Number:</label>
			<input type="text" id="last_name" name="phone_number">
		</div>
	</div>

<div class="row">
	<div class="input-field col s6 offset-s3">
	  <h2>License</h2>
	</div>
</div>

  <div class="row">
  	<div class="input-field col s6 offset-s3">
	    <label for="license">License ID:</label>
	    <input type="text" id="" name="license"><br>
		</div>
  </div>

  <div class="row">
	  <div class="input-field col s6 offset-s3">
	    <label for="license_expiry">Expiry:</label>
	    <input type="text" id="" name="license_expiry">
		</div>
	</div>

  <div class="row">
	  <div class="input-field col s6 offset-s3">
	    <label for="province">Province:</label>
	    <input type="text" id="" name="province">
	  </div>
	</div>

	<div class="row">
		<div class="col s6 offset-s3">
			<button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
		</div>
	</div>
</form>

<div class="row">
	<div class="col s6 offset-s3">
		<span>Need to ship?<a href="/signup_customer"> Become a customer</a></span>
	</div>
</div>
