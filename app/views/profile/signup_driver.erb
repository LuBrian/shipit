<div class="row">
	<div class="input-field col s6 offset-s3">
		<ul class="error">
		  <% if @current_user && @current_user.errors.any? %>
		    <% @current_user.errors.full_messages.each do |message| %>
		      <li> <%= message %> </li>
		      <% end %>
		  <% end %>
		</ul>
	</div>
</div>


<div class="row">
	<div class="col l6 offset-l3 s10 offset-s1">
		<% if current_user %>
			<h1>Edit Here</h1>
		<% else %>
			<h2 class="center">Start Delivering Soon</h2>
		<% end %>
		<h1>Driver Account</h1>
	</div>
</div>

<form action="/signup_driver" method="POST">
	<%= erb :'/profile/signup_form' %>
<div class="row">
    <div class="col l6 offset-l3 s10 offset-s1">
      <h1>License</h1>
    </div>
</div>

  <div class="row">
  	<div class="input-field col l6 offset-l3 s10 offset-s1">
	    <label for="license">License ID:</label>
	    <input type="text" id="" class="validate" name="license" value="<%= @current_user.license if @current_user %>"><br>
		</div>
  </div>

  <div class="row">
	  <div class="input-field col l6 offset-l3 s10 offset-s1">
	    <label for="license_expiry">Expiry:</label>
	    <input type="text" id="" name="license_expiry" class="validate" value="<%= @current_user.license_expiry if @current_user %>">
		</div>
	</div>

  <div class="row">
	  <div class="input-field col l6 offset-l3 s10 offset-s1">
	    <label for="province">Province:</label>
	    <input type="text" id="" name="province" class="validate" value="<%= @current_user.province if @current_user %>">
	  </div>
	</div>

	<div class="row">
		<div class="col s6 offset-s3 center">
		    <% if current_user %>
		       <button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
		    <% else %>
		       <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
		    <% end %>
		</div>
	</div>
</form>


<div class="row">
		<div class="col s6 offset-s3 center">
			<% if current_user %>
				<form action="/profile" method="POST">
				  <input type="hidden" name="_method" value="delete">
				  <input type="submit" class="btn btn-default btn-xs" value="DELETE ACOUNT">
				</form>
			<% end %>
		</div>
</div>


<div class="row">
	<div class="col s6 offset-s3 center">
		<span>Need to ship?<a href="/signup_customer"> Become a customer</a></span>
	</div>
</div>
