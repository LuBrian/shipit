<div class="row">
	<div class="input-field col s6 offset-s3">
		<ul class="error">
		  <% if @current_user && @current_user.errors.any? %>
		    <% @current_user.errors.full_messages.each do |message| %>
		      <li> <%= message %> </li>
		      <% end %>
		  <% end %>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col l6 offset-l3 s10 offset-s1">
		<% if @current_user %>
			<h2 class="center">Edit Here</h2>
		<% else %>
			<h2 class="signup_customer center">Start Sending Packages</h2>
		<% end %>
		<h1>Customer Account</h1>
	</div>
</div>

<form action="/signup_customer" method="POST">
	<%= erb :'/profile/signup_form' %>

	<div class="row">
		    <div class="col s6 offset-s3 center">
		      <% if current_user %>
		        <button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
		      <% else %>
		        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
		      <% end %>
		    </div>
	</div>
</form>

<div class="row">
		<div class="col l6 s12 offset-l3 center">
			<% if current_user %>
				<form action="/profile" method="POST">
				  <input type="hidden" name="_method" value="delete">
				  <input type="submit" class="btn btn-default btn-xs" value="Delete Account">
				</form>
			<% end %>
		</div>
</div>

<div class="row">
	<div class="col s6 offset-s3 center">
		<span>Are you a driver?<a href="/signup_driver"> Become a driver</a></span>
	</div>
</div>
