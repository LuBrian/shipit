<div class="row">
	<div class="input-field col s6 offset-s3">
		<ul class="error">
		  <% if @current_user && @current_user.errors.any? %>
		    <% @current_user.errors.full_messages.each do |message| %>
		      <li> <%= message %> </li>
		      <% end %>
		  <% end %>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s6 offset-s3">
		<h1>Edit Here</h1>
		<h1>Account</h1>
	</div>
</div>

<% if @current_user.type == "Customer" %>
	<form action="/profile" method="post">
		<input type="hidden" name="_method" value="put">
		<%= erb :'/profile/signup_form' %>
		<div class="row">
			    <div class="col s6 offset-s3 center">
			        <button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
			    </div>
		</div>
	</form>
	<div class="row">
			<div class="col s6 offset-s3 center">
				<% if current_user %>
					<form action="/profile" method="POST">
					  <input type="hidden" name="_method" value="delete">
						<button class="btn waves-effect waves-light" type="submit">
					    Delete Account
					  </button>
					</form>
				<% end %>
			</div>
	</div>


<% elsif @current_user.type == "Driver" %>
	<form action="/profile" method="post">
		<input type="hidden" name="_method" value="put">
		<%= erb :'/profile/signup_form' %>
		<div class="row">
		    <div class="col s6 offset-s3">
		      <h1>License</h1>
		    </div>
		</div>

	  <div class="row">
	  	<div class="input-field col s6 offset-s3">
		    <label for="license">License ID:</label>
		    <input type="text" id="" class="validate" name="license" value="<%= current_user.license if current_user && current_user.type == 'Driver' %>"><br>
			</div>
	  </div>

	  <div class="row">
		  <div class="input-field col s6 offset-s3">
		    <label for="license_expiry">Expiry:</label>
		    <input type="text" id="" name="license_expiry" class="validate" value="<%= current_user.license_expiry if current_user && current_user.type == 'Driver' %>">
			</div>
		</div>

	  <div class="row">
		  <div class="input-field col s6 offset-s3">
		    <label for="province">Province:</label>
		    <input type="text" id="" name="province" class="validate" value="<%= current_user.province if current_user && current_user.type == 'Driver' %>">
		  </div>
		</div>

		<div class="row">
			<div class="col s6 offset-s3 center">
			  <button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
			</div>
		</div>
	</form>


	<div class="row">
			<div class="col s6 offset-s3 center">
				<% if current_user %>
					<form action="/profile" method="POST">
					  <input type="hidden" name="_method" value="delete">
						<button class="btn waves-effect waves-light" type="submit">
					    Delete Account
					  </button>
					</form>
				<% end %>
			</div>
	</div>

<% end %>
