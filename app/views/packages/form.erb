<ul class="error">
  <% if @package.errors.any? %>
    <% @package.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
      <% end %>
  <% end %>
</ul>


  <div class="col l4">
    <label> Title </label>
    <input type="text" placeholder="A Title for Your Package" name="title" value="<%= @package.title %>">
  </div>

  <div class="col l4">
    <label> Recipient </label>
    <input type="text" placeholder="Who are you sending your package to?" name="recipient" value="<%= @package.recipient %>">
  </div>

<div class="col s8">
  <label> Origin </label>
  <input type="text" placeholder="Where is your package coming from?" name="origin" value="<%= @package.origin %>">
</div>

<div class="col s8">
  <label> Destination </label>
  <input type="text" placeholder="Where is your package going?" name="destination" value="<%= @package.destination %>">
</div>


<div>
  <label> Length </label>
  <input type="text" placeholder="Length in Inches" name="length" value="<%= @package.length %>">
</div>

<div>
  <label> Width </label>
  <input type="text" placeholder="Width in Inches" name="width" value="<%= @package.width %>">
</div>

<div>
  <label> Height </label>
  <input type="text" placeholder="Height in Inches" name="height" value="<%= @package.height %>">
</div>

<div>
  <label> Notes </label>
  <input type="text" placeholder="Additional information" name="notes" value="<%= @package.notes %>">
</div>

<div class="col s12 l6 offset-l3 center">
  <!-- <button class="btn waves-effect waves-light" type="submit">Submit</button> -->
  <input type="submit" class="btn btn-default btn-xs" value="Submit">
</div>
