<% if @current_user.type == 'Customer'%>
    <h1> Your Packages </h1>

  <% @packages.where(customer_id: @current_user.id ).order(:created_at).each do |package| %>
    <a href="/packages/<%= package.id %>">  
      <div>
        <p>
          <% if package.driver_id.nil? %>
          Ready for Pickup
          <% elsif package.driver_id && package.pick_up_time.nil? %> 
          Accepted
          <% elsif package.pick_up_time && package.delivery_time.nil? %>
          Picked Up
          <% else package.delivery_time %> 
            Delivered at <%= package.delivery_time %>
          <% end %>
          <%= package.title %><%= package.origin %><%= package.destination %></p>
      </div>
    </a>
  <% end %>

<% elsif @current_user.type == 'Driver'%>
  <h1> Your Deliveries </h1>

  <% @packages.where(driver_id: @current_user.id ).order(:pick_up_time).each do |package| %>
    <a href="/packages/<%= package.id %>">  
      <div>
        <p>
          <% if package.driver_id && package.pick_up_time.nil? %> 
          Accepted
          <% else  package.pick_up_time && package.delivery_time.nil? %>
          Picked Up
          <% end %>
          <%= package.title %><%= package.origin %><%= package.destination %></p>
      </div>
    </a>
  <% end %>

  <h1> New Deliveries </h1>

  <% @packages.where(driver_id: nil ).order(:created_at).each do |package| %>
    <a href="/packages/<%= package.id %>">  
      <div>
        <p>
          <% if package.driver_id.nil? %>
          Ready for Pickup 
          <% end %>
          <%= package.title %><%= package.origin %><%= package.destination %>
        </p>
      </div>
    </a>
  <% end %>

  <h1> Past Deliveries </h1>

  <% @packages.where(driver_id: @current_user.id).order(:delivery_time).each do |package| %>
    <a href="/packages/<%= package.id %>">  
      <div>
        <p>
          <% if package.delivery_time %> 
            Delivered at <%= package.delivery_time %>
          <% end %>
          <%= package.title %><%= package.origin %><%= package.destination %>
        </p>
      </div>
    </a>
  <% end %>
<% end %>