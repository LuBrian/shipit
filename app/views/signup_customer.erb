<div class="row">
	<div class="input-field col s6 offset-s3">
		<ul class="error">
		  <% if @current_user && @current_user.errors.any? %>
		    <% @current_user.errors.full_messages.each do |message| %>
		      <li> <%= message %> </li>
		      <% end %>
		  <% end %>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s6 offset-s3">
		<% if current_user %>
			<h1>Edit Here</h1>
		<% else %>
			<h1 class="center">Start Shipping Soon</h1>
		<% end %>
		<h1>Account</h1>
	</div>
</div>

<form action="/signup_customer" method="POST">
	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="email">Email:</label>
			<input type="email" id="email" class="validate" name="email" value="<%= current_user.email if current_user && current_user.type == 'Customer' %>"><br>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="password_hash">Password:</label>
			<input type="password" id="password" class="validate" name="password_hash" value="<%= current_user.password_hash if current_user && current_user.type == 'Customer' %>">
		</div>
	</div>

	<div class="row">
		<div class="col s6 offset-s3 red darken-2">
			<h1>Profile</h1>
		</div>
	</div>

  <div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="first_name">First Name:</label>
		<input type="text" id="first_name" class="validate" name="first_name" value="<%= current_user.first_name if current_user && current_user.type == 'Customer' %>"><br>
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="last_name">Last Name:</label>
			<input type="text" id="last_name" class="validate" name="last_name" value="<%= current_user.last_name if current_user && current_user.type == 'Customer' %>">
		</div>
	</div>

	<div class="row">
		<div class="input-field col s6 offset-s3">
			<label for="phone_number">Phone Number:</label>
			<input type="text" id="phone_number" class="validate" name="phone_number" value="<%= current_user.phone_number if current_user && current_user.type == 'Customer' %>">
		</div>
	</div>

	<div class="row">
		<div class="col s6 offset-s3 center">
			<% if current_user %>
				<button class="btn waves-effect waves-light" type="submit" name="action">Save</button>
			<% else %>
				<button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
			<% end %>
		</div>
	</div>
</form>

<div class="row">
	<div class="col s6 offset-s3 center">
		<span>Are you a driver?<a href="/signup_driver"> Become a driver</a></span>
	</div>
</div>
